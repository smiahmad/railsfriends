<div class="jumbotron">
  <h1 class="display-4">
     <%= @friend.first_name %>
     <%= @friend.last_name %>  
  </h1>

  <p class="lead">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %>        
  </p>
  <br>

  <div class="btn-group">
    <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
    <%= button_to 'Delete', @friend, method: :delete, data: { turbo_confirm: "Are you sure?"}, class:"btn btn-danger" %>
  </div>
  <br>
  <br>

  <%= link_to "Back to friends", friends_path,  class:"btn btn-dark" %>
</div>



